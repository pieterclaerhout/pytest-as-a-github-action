{
    "python.pythonPath": "/usr/local/bin/python3",
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.coverage": true,
        "**/__pycache__": true,
        "**/.pytest_cache": true,
        "**/htmlcov": true,
        "**/.DS_Store": true
    },
    "python.testing.pytestEnabled": true,
    "python.testing.pytestArgs": [
        "--cov=.",
    ],
    "python.testing.unittestEnabled": false,
    "python.testing.nosetestsEnabled": false
}
